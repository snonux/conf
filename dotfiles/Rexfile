use Rex -feature => ['1.14'];

our $HOME = $ENV{HOME};
our $DOT = "$HOME/git/rexfiles/dotfiles";

task 'helix', sub {
  my ($dst, $src) = ("$HOME/.config/helix", "$DOT/helix");
  file $dst, ensure => 'directory';
  file "$dst/" . basename($_), ensure => 'present', source => $_  for glob "$src/*"; 
};

task 'all', sub {
  helix();
};